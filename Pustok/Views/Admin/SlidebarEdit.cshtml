@model Slidebar
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
     
    <div class="container">
        <h2>Edit Slidebar</h2>
        <form action="~/admin/EditSubmitSlidebar?id=@Model.Id" method="POST" >
            <div class="form-group">
                <label for="slidebarTitle">Slidebar Title</label>
                <input name="title" value="@Model.Title" type="text" class="form-control" id="slidebarName" placeholder="Enter slidebar title">
            </div>
            <div class="form-group">
                <label for="slidebarDescription">Slidebar Description</label>
                <input name="description" value="@Model.Description" type="text" class="form-control" id="slidebarDescription" placeholder="Enter description">
            </div>
            <div class="form-group">
                <label for="slidebarButton">Slidebar Offer</label>
                <input name="offer" value="@Model.Offer" type="text" class="form-control" id="slidebarRating" placeholder="Enter offer">
            </div>
            <div class="form-group">
                <label for="slidebarButton">Slidebar Order</label>
                <input name="order" value="@Model.Order" type="text" class="form-control" id="slidebarRating" placeholder="Enter order">
            </div>
            <button type="submit" class="btn btn-primary">Update Slidebar</button>
        </form>
    </div>

</body>
</html>
