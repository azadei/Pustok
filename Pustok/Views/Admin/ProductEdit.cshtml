@model Product
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
     
    <div class="container">
        <h2>Edit Product</h2>
        <form action="~/admin/EditSubmitProduct?id=@Model.Id" method="POST" >
            <div class="form-group">
                <label for="productName">Product Name</label>
                <input name="name" value="@Model.Name" type="text" class="form-control" id="productName" placeholder="Enter product name">
            </div>
            <div class="form-group">
                <label for="productDescription">Product Description</label>
                <input name="description" value="@Model.Description" type="text" class="form-control" id="productDescription" placeholder="Enter product description">
            </div>
            <div class="form-group">
                <label for="productColor">Product Color</label>
                <input name="color" value="@Model.Color" type="text" class="form-control" id="productColor" placeholder="Enter product color">
            </div>
            <div class="form-group">
                <label for="productSize">Product Size</label>
                <input name="size" value="@Model.Size" type="text" class="form-control" id="productSize" placeholder="Enter size">
            </div>
            <div class="form-group">
                <label for="productPrice">Product Price</label>
                <input name="price" value="@Model.Price" type="text" class="form-control" id="productPrice" placeholder="Enter price">
            </div>
            <button type="submit" class="btn btn-primary">Update Product</button>
        </form>
    </div>

</body>
</html>
